//‚úÖ 1Ô∏è‚É£ Move Zeroes ‚Äî REVIEW
function moveZeroes(arr) {
  let left = 0;

  for (let right = 0; right < arr.length; right++) {
    if (arr[right] !== 0) {
      arr[left] = arr[right];
      left++;
    }
  }

  // fill remaining with zero
  while (left < arr.length) {
    arr[left] = 0;
    left++;
  }

  return arr;
}

//‚úÖ 2Ô∏è‚É£ Remove Element ‚Äî REVIEW
function removeElement(arr, element) {
  let left = 0;

  for (let right = 0; right < arr.length; right++) {
    if (arr[right] !== element) {
      arr[left] = arr[right];
      left++;
    }
  }

  return left; // length of valid elements
}
//üí° If interviewer asks for array:

return arr.slice(0, left); OR //set arr.length = left this will return arr with only valid elem

//‚úÖ 3Ô∏è‚É£ Reverse Array ‚Äî PERFECT
let start = 0;
let end = arr.length - 1;

while (start < end) {
  [arr[start], arr[end]] = [arr[end], arr[start]];
  start++;
  end--;
}
return arr;

//3Ô∏è‚É£ Remove Duplicates (sorted array)

//Keep only unique numbers.[1,2,2,3,4,5,5,6]
function removeDuplicates(nums) {
    if (nums.length === 0) return 0;
    
    let slow = 0; // Pointer for the last unique element
    
    for (let fast = 1; fast < nums.length; fast++) {
        // If current element is different from the last unique one
        if (nums[fast] !== nums[slow]) {
            slow++;
            nums[slow] = nums[fast]; // Move the unique element forward
        }
    }
    
    // Optional: Truncate array to remove leftover "tail" elements
    nums.length = slow + 1; 
    return nums;
}

//if sorted - best two pointers
//not sorted - hash set/map
